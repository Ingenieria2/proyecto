{% extends 'base.html.twig' %}
{% block title %}Login{% endblock %}
{% block contenido %}
<script type="text/javascript" src="js/validarLogin.js"></script>
<div class="card mx-auto my-5" style="max-width: 500px;">
  <form id="formLogin" name="formLogin" method="post" action="{{ path('login') }}" onsubmit="return validarLogin();">
    <fieldset class="form-box mx-3 my-3">
      <legend class="my-3">Inicio de Sesion</legend>
      <hr>
      {% if error %}<div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>{% endif %}
      {#% if msgError %}<div class="alert alert-danger">{{msgError}}</div>{% endif %#}
      <div class="form-group mx-3">
	    <label for="Usuario">Usuario:</label>
        {#% if errores['Usuario'] %}<span class="alert alert-danger">{{errores['Usuario']}}</span>{% endif %#}
	    <input type="text" id="username" name="_username" class="form-control" placeholder="Usuario" value="{{ last_username }}" required>
	  </div>
      <div class="form-group mx-3">
        <label for="Contraseña">Contraseña:</label>
        {#% if errores['Contraseña'] %}<span class="alert alert-danger">{{errores['Contraseña']}}</span>{% endif %#}
        <input type="password" id="password" name="_password" class="form-control" placeholder="Contraseña" required>
      </div>
      <hr>
      <button class="btn btn-primary" type="submit" value="submit" name="Aceptar" form="formLogin">Aceptar</button>
    </fieldset>
  </form>
</div>
{% endblock %}
