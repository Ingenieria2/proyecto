{% extends 'base.html.twig' %}
{% form_theme form 'formFields.html.twig' %}
{% block title %}Mi cuenta{% endblock %}
    
{% block contenido %}
    {% for message in app.session.flashbag().get('status') %}
    <div class="alert alert-success">
        {{ message }}
    </div>
 {% endfor %}
<script type="text/javascript" src="js/validarUsuario.js"></script>
<div class="card mx-auto my-5" style="max-width: 500px;">
  {{ form_start(form) }}
  <fieldset class="form-box mx-3 my-3">
    <legend class="mt-3">Mi Cuenta</legend>
    <hr>
    <div class="form-group mx-3">
        {{ form_label(form.creadoEn) }}
        {{ form_widget(form.creadoEn) }}
    </div>
    <div class="form-group mx-3">
        {{ form_label(form.mail) }}
        {{ form_errors(form.mail) }}
        <div class="col-sm-15">
          {{ form_widget(form.mail) }}
            {% if form_errors(form.mail) %}<span class="glyphicon glyphicon-remove form-control-feedback"></span>{% endif %}
          </div>
    </div>
    <div class="form-group mx-3 {% if form_errors(form.username) %}has-error has-feedback{% endif %}">
        {{ form_label(form.username) }}
        {{ form_errors(form.username) }}
        <div class="col-sm-15">
          {{ form_widget(form.username) }}
          {% if form_errors(form.username) %}
            <span class="glyphicon glyphicon-remove form-control-feedback"></span>
          {% endif %}
        </div>
    </div>
    <div class="form-group mx-3">
        {{ form_label(form.nombre) }}
        {{ form_widget(form.nombre) }}
        {{ form_errors(form.nombre) }}
    </div>
    <div class="form-group mx-3">
        {{ form_label(form.apellido) }}
        {{ form_widget(form.apellido) }}
        {{ form_errors(form.apellido) }}
    </div>
    <div class="form-group mx-3">
        {{ form_row(form.plainPassword.first) }}
        {{ form_row(form.plainPassword.second) }}
        {{ form_errors(form.plainPassword) }}
    </div>
    <hr>
     {{ form_widget(form.Update) }}
    <a href="{{path('homepage')}}" class="btn">Cancelar</a>
    </fieldset>
  {{ form_end(form) }}
</div>
{% endblock %}
