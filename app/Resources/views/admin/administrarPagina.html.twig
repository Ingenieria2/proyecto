{% extends 'base.html.twig' %}
{% form_theme form 'formFields.html.twig' %}
{% block title %}Configuración{% endblock %}
{% block contenido %}
<script type="text/javascript" src="js/validarUsuario.js"></script>
<div class="card mx-auto my-5" style="max-width: 500px;">
  {{ form_start(form) }}
  <fieldset class="form-box mx-3 my-3">
    <legend class="mt-3">Configuración del Sistema</legend>
    <hr>
    <div class="form-group mx-3">
        {{ form_label(form.titulo) }}
        {{ form_widget(form.titulo) }}
    </div>
        <div class="form-group mx-3">
        {{ form_label(form.descripcion) }}
        {{ form_widget(form.descripcion) }}
    </div>
    <div class="form-group mx-3">
        {{ form_label(form.contacto) }}
        {{ form_errors(form.contacto) }}
        <div class="col-sm-15">
          {{ form_widget(form.contacto) }}
            {% if form_errors(form.contacto) %}<span class="glyphicon glyphicon-remove form-control-feedback"></span>{% endif %}
          </div>
    </div>
    <div class="form-group mx-3 {% if form_errors(form.listado) %}has-error has-feedback{% endif %}">
        {{ form_label(form.listado) }}
        {{ form_widget(form.listado) }}
        {{ form_errors(form.listado) }}
    </div>
    <div class="form-group mx-3">
        {{ form_label(form.habilitado) }}
        {{ form_widget(form.habilitado) }}
        {{ form_errors(form.habilitado) }}
    </div>
    <div class="form-group mx-3">
        {{ form_row(form.mensaje) }}
    </div>
    <hr>
     {{ form_widget(form.Guardar) }}
    <a href="{{path('homepage')}}" class="btn">Cancelar</a>
    </fieldset>
  {{ form_end(form) }}
</div>
{% endblock %}
