{% extends 'base.html.twig' %}
{% form_theme form 'formFields.html.twig' %}
{% block title %}Paciente{% endblock %}
{% block contenido %}
<script type="text/javascript" src="js/validarUsuario.js"></script>
<div class="card mx-auto my-5" style="max-width: 500px;">
  {{ form_start(form) }}
  <fieldset class="form-box mx-3 my-3">
    <legend class="mt-3">Alta Paciente</legend>
    <hr>
    <div class="form-group mx-3">
        {{ form_label(form.apellido) }}
        {{ form_widget(form.apellido) }}
    </div>
        <div class="form-group mx-3">
        {{ form_label(form.nombre) }}
        {{ form_widget(form.nombre) }}
    </div>
    <div class="form-group mx-3">
        {{ form_label(form.fecha_Nac) }}
        {{ form_widget(form.fecha_Nac) }}
        {{ form_errors(form.fecha_Nac) }}
        <div class="col-sm-15">
          {{ form_widget(form.fecha_Nac) }}
            {% if form_errors(form.fecha_Nac) %}<span class="glyphicon glyphicon-remove form-control-feedback"></span>{% endif %}
          </div>
    </div>
    <div class="form-group mx-3 {% if form_errors(form.genero) %}has-error has-feedback{% endif %}">
        {{ form_label(form.genero) }}
        {{ form_widget(form.genero) }}
        {{ form_errors(form.genero) }}
    </div>
    <div class="form-group mx-3">
        {{ form_label(form.idTipoDocumento) }}
        {{ form_widget(form.idTipoDocumento) }}
        {{ form_errors(form.idTipoDocumento) }}
    </div>
    <div class="form-group mx-3">
        {{ form_row(form.documento) }}
    </div>
        <div class="form-group mx-3">
        {{ form_row(form.domicilio) }}
    </div>
        <div class="form-group mx-3">
        {{ form_row(form.telefono) }}
    </div>
        <div class="form-group mx-3">
        {{ form_row(form.idObraSocial) }}
    </div>
    <hr>
     {{ form_widget(form.SingUpPatient) }}
    <a href="{{path('homepage')}}" class="btn">Cancelar</a>
    </fieldset>
  {{ form_end(form) }}
</div>
{% endblock %}