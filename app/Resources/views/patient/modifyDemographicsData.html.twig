{% extends 'base.html.twig' %}
{% form_theme form 'formFields.html.twig' %}
{% block title %}Configuración{% endblock %}
{% block contenido %}
<script type="text/javascript" src="js/validarUsuario.js"></script>
<div class="card mx-auto my-5" style="max-width: 500px;">
  {{ form_start(form) }}
  <fieldset class="form-box mx-3 my-3">
    <legend class="mt-3">Configuración del Sistema</legend>
    <hr>
    <div class="form-group mx-3">
        {{ form_label(form.heladera) }}
        {{ form_widget(form.heladera) }}
    </div>
        <div class="form-group mx-3">
        {{ form_label(form.electricidad) }}
        {{ form_widget(form.electricidad) }}
    </div>
    <div class="form-group mx-3">
        {{ form_label(form.mascotas) }}
        {{ form_widget(form.mascotas) }}
        {{ form_errors(form.mascotas) }}
        <div class="col-sm-15">
          {{ form_widget(form.mascotas) }}
            {% if form_errors(form.mascotas) %}<span class="glyphicon glyphicon-remove form-control-feedback"></span>{% endif %}
          </div>
    </div>
    <div class="form-group mx-3 {% if form_errors(form.idVivienda) %}has-error has-feedback{% endif %}">
        {{ form_label(form.idVivienda) }}
        {{ form_widget(form.idVivienda) }}
        {{ form_errors(form.idVivienda) }}
    </div>
     <div class="form-group mx-3 {% if form_errors(form.idAgua) %}has-error has-feedback{% endif %}">
        {{ form_label(form.idAgua) }}
        {{ form_widget(form.idAgua) }}
        {{ form_errors(form.idAgua) }}
    </div>
    <div class="form-group mx-3">
        {{ form_label(form.idCalefaccion) }}
        {{ form_widget(form.idCalefaccion) }}
        {{ form_errors(form.idCalefaccion) }}
    </div>
    <hr>
     {{ form_widget(form.SingUpDemographicsData) }}
    <a href="{{path('homepage')}}" class="btn">Cancelar</a>
    </fieldset>
  {{ form_end(form) }}
</div>
{% endblock %}